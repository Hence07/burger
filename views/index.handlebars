<div class="container">
    <div class="row">

        <h1>Eat-Da-Burger!</h1>
        <p>Enter a burger you want to eat, Click the "submit" button</p>
        <div class="col-sm-4">


            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}

                    <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="1">
                        <button class="btn" type="submit">yum!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-4">
        
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.burger_name}}

                    <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="0">
                        <button class="btn" type="submit">devoured it!</button>
                    </form>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>